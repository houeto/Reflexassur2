{% extends '::base_admin.html.twig' %}
{% block home %}
    {{parent()}}
    {% block categorie %}{% endblock %}
    {% block tarif %}{% endblock %}
    {% block automobile %}{% endblock %}
    {% block action %}{% endblock %}
     {% block titre %} Gestion des Agences{% endblock %}
       
         <form {{form_enctype(form)}} method="post" style=" margin: 25px 25px; ">
             <div class="col-md-5">
                  {{ form_label(form.mon) }}
                  {{ form_widget(form.mon) }}
                  
                  {{ form_label(form.telephone) }}
                  {{ form_widget(form.telephone) }}
             </div>          
              <div class="col-md-5">
                  {{ form_label(form.adresse) }}
                  {{ form_widget(form.adresse) }}
                  
                  {{ form_label(form.compagnie) }}
                  {{ form_widget(form.compagnie) }}
                  
                    {{ form_widget(form) }}
             </div>
              <div class="col-md-2" style="margin-top: 25px;">
                  <button class="btn btn-success" type="submit">Enregistrer</button>
             </div>
            
        </form>
          <div class="col-md-12" style=" margin-bottom: 50px; margin-top: 50px; ">
            
           <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10%">N°</th>
                    <th style="width: 25%">Nom de l'agence</th>
                    <th style="width: 25%">Téléphone</th>
                    <th style="width: 25%">Compagnie</th>
                    <th style="width: 15%;text-align:right;">Action</th>
                </tr>
            </thead>
            <tbody>
                {%for a in agences%}
                    <tr>
                        <td>{{loop.index}}</td>
                        <td>{{a.mon}}</td>
                        <td>{{a.Telephone}}</td>
                        <td> {%if a.compagnie%}{{a.compagnie.nom}}{%else%}{%endif%}</td>
                        <td style="text-align:right;">
                                <a href="{{path('modifier_agence', {'id': a.id})}}" class="btn btn-default" title="Modifier"><i class="glyphicon glyphicon-edit"></i></a>
                                <a data-toggle="modal" href="#supprimer-agence{{a.id}}" class="btn btn-default" title="Supprimer"><i class="glyphicon glyphicon-trash"></i></a>
                                <div class="modal" id="supprimer-agence{{a.id}}" style="margin-top: 60px">
                                    <div class="modal-dialog" style="max-width: 400px">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                <h4 class="modal-title" style="text-align: center">Confirmer la suppression</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p style="text-align: center; font-size:15px;">Voulez vous vraiment supprimer cette agence?</p>

                                            </div>
                                            <div class="modal-footer">
                                                <a href="{{path('supprimer_agence', {'id': a.id})}}" class="btn btn-danger">Supprimer</a>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
</div>
	
 {% endblock %}


