
{% extends '::base_admin.html.twig' %}
{% block home %}
    {{parent()}}
    {% block categorie %}{% endblock %}
    {% block tarif %}{% endblock %}
    {% block automobile %}{% endblock %}
    {% block action %}{% endblock %}
     {% block titre %}Gestion des Clients{% endblock %}
        
             <form {{form_enctype(form)}} method="post" style=" margin: 25px 25px; ">
             <div class="col-md-4">
                  {{ form_label(form.titre) }}
                  {{ form_widget(form.titre) }}
                  
                  {{ form_label(form.nom) }}
                  {{ form_widget(form.nom) }}
                  
                  {{ form_label(form.fax) }}
                  {{ form_widget(form.fax) }}
                  
                   {{ form_label(form.catsosprof) }}
                  {{ form_widget(form.catsosprof) }}
                  
                
                  
             </div>   
                     <div class="col-md-4">
                  {{ form_label(form.email) }}
                  {{ form_widget(form.email) }}
                  
                   {{ form_label(form.ifu) }}
                  {{ form_widget(form.ifu) }}
                  
                    {{ form_label(form.categorie_client) }}
                  {{ form_widget(form.categorie_client) }}
                  
                 
                   {{ form_label(form.tarif_groupement) }}
                  {{ form_widget(form.tarif_groupement) }}
                  
             </div>   
              <div class="col-md-4">
                  {{ form_label(form.adresse) }}
                  {{ form_widget(form.adresse) }}
                  
                  {{ form_label(form.telephone ) }}
                  {{ form_widget(form.telephone) }}
                  
                  {{ form_label(form.prof) }}
                  {{ form_widget(form.prof) }}
                  
                 
                  
                    {{ form_widget(form) }}
             </div>
              <div class="col-md-2" style="margin-top: 25px;">
                  <button class="btn btn-success" type="submit">Enregistrer</button>
             </div>
            
        </form>
        <div class="col-md-12" style=" margin-bottom: 50px; margin-top: 50px; ">
                        
         
           <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10%">N°</th>
                    <th style="width: 25%">Titre</th>
                    <th style="width: 25%">Nom</th>
                    <th style="width: 25%">Adresse</th>
                    <th style="width: 15%">Téléphone</th>
                    <th style="width: 25%">Email</th>
                    <th style="width: 25%">Ifu</th>
                    <th style="width: 15%">tarif groupement</th>
                    <th style="width: 15%">Catégorie client</th>
                </tr>
            </thead>
            <tbody>
                {%for c in clients%}
                    <tr>
                        <td>{{loop.index}}</td>
                        <td>{{c.titre}}</td>
                        <td>{{c.nom}}</td>
                        <td>{{c.adresse}}</td>
                        <td>{{c.telephone}}</td>
                        <td>{{c.email}}</td>
                        <td>{{c.ifu}}</td>
                        <td>{%if c.tarifgroupement%}{{c.tarifgroupement.taux}}{%else%}{%endif%}</td>
                        <td>{%if c.CategorieClient%}{{c.CategorieClient.libelle}}{%else%}{%endif%}</td>
                        <td style="text-align:right;">
                                <a href="{{path('modifier_client', {'id': c.id})}}" class="btn btn-default" title="Modifier"><i class="glyphicon glyphicon-edit"></i></a>
                                <a data-toggle="modal" href="#supprimer-entreprise{{c.id}}" class="btn btn-default" title="Supprimer"><i class="glyphicon glyphicon-trash"></i></a>
                                <div class="modal" id="supprimer-entreprise{{c.id}}" style="margin-top: 60px">
                                    <div class="modal-dialog" style="max-width: 400px">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                <h4 class="modal-title" style="text-align: center">Confirmer la suppression</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p style="text-align: center; font-size:15px;">Voulez vous vraiment supprimer ce client?</p>

                                            </div>
                                            <div class="modal-footer">
                                                <a href="{{path('supprimer_client', {'id': c.id})}}" class="btn btn-danger">Supprimer</a>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
</div>
	
 {% endblock %}


