{% extends '::base_admin.html.twig' %}
{% block home %}
    {{parent()}}
    {% block categorie %}{% endblock %}
    {% block assurance %}{% endblock %}
    {% block automobile %}{% endblock %}
    {% block action %}{% endblock %}
     {% block titre %}  Gestion des Tarifs Flotte {% endblock %}
 
         <form {{form_enctype(form)}} method="post" style=" margin: 25px 25px; ">
            <div class="col-md-4">          
                {{ form_label(form.borneInf) }}
                {{ form_widget(form.borneInf) }}
            </div>
            <div class="col-md-4">          
                {{ form_label(form.borneSup) }}
                {{ form_widget(form.borneSup) }}
            </div>
            <div class="col-md-4">          
                {{ form_label(form.taux) }}
                {{ form_widget(form.taux) }}
                {{ form_widget(form) }}
            </div>
           <div class="col-md-12" align='center' style="margin-top: 15px;">
                <button class="btn btn-success" type="submit">Ajouter un tarif</button>
           </div>
        </form>
        <div class="col-md-12" style=" margin-bottom: 50px; margin-top: 50px; ">      
           <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10%;text-align: center;">N°</th>
                    <th style="width: 15%;text-align: center;">Borne Inférieure</th>
                    <th style="width: 15%;text-align: center;">Borne Supérieure</th>
                    <th style="width: 15%;text-align: center;">Taux</th>
                    <th style="width: 45%;text-align: center;">Action</th>
                </tr>
            </thead>
            <tbody>
                {%for t in tarifs%}
                    <tr>
                        <td style="text-align: center;">{{loop.index}}</td>
                        <td style="text-align: center;">{{t.borneInf}}</td>
                        <td style="text-align: center;">{{t.borneSup}}</td>
                        <td style="text-align: center;">{{t.taux}}</td>
                        <td style="text-align:center;">
                                <a href="{{path('modifier_tarifflotte', {'id': t.id})}}" class="btn btn-default" title="Modifier"><i class="glyphicon glyphicon-edit"></i></a>
                                <a data-toggle="modal" href="#supprimer-tarifflotte{{t.id}}" class="btn btn-default" title="Supprimer"><i class="glyphicon glyphicon-trash"></i></a>
                                <div class="modal" id="supprimer-tarifflotte{{t.id}}" style="margin-top: 60px">
                                    <div class="modal-dialog" style="max-width: 400px">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                <h4 class="modal-title" style="text-align: center">Confirmer la suppression</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p style="text-align: center; font-size:15px;">Voulez vous vraiment supprimer ce tarif?</p>

                                            </div>
                                            <div class="modal-footer">
                                                <a href="{{path('supprimer_tarifflotte', {'id':t.id})}}" class="btn btn-danger">Supprimer</a>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
        </div>

	
 {% endblock %}

