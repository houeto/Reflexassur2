{% extends '::base_admin.html.twig' %}
{% block home %}
    {{parent()}}
     {% block titre %} Gestion des Zones de Circulation{% endblock %}
       {% block tarif %}{% endblock %}
        {% block assurance %}{% endblock %}
        {% block automobile %}{% endblock %}
        {% block action %}{% endblock %}
        {% block categorie %}{% endblock %}
         <form {{form_enctype(form)}} method="post" style=" margin: 25px 25px; ">
             <div class="col-md-10">
                  {{ form_label(form.libelle) }}
                  {{ form_widget(form.libelle) }}
                  {{ form_widget(form) }}
             </div>  
              <div class="col-md-2" style="margin-top: 25px;">
                  <button class="btn btn-success" type="submit">Enregistrer</button>
             </div>
            
        </form>
             
       
         <div class="col-md-12" style=" margin-bottom: 50px; margin-top: 50px; ">
           <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10%">N°</th>
                    <th style="width: 45%">Libellé</th>
                    <th style="width: 45%;text-align:right;">Action</th>
                </tr>
            </thead>
            <tbody>
                {%for z in zones%}
                    <tr>
                        <td>{{loop.index}}</td>
                        <td>{{z.libelle}}</td>
                        <td style="text-align:right;">
                                <a href="{{path('modifier_zonecirculation', {'id': z.id})}}" class="btn btn-default" title="Modifier"><i class="glyphicon glyphicon-edit"></i></a>
                                <a data-toggle="modal" href="#supprimer-zonecirculation{{z.id}}" class="btn btn-default" title="Supprimer"><i class="glyphicon glyphicon-trash"></i></a>
                                <div class="modal" id="supprimer-zonecirculation{{z.id}}" style="margin-top: 60px">
                                    <div class="modal-dialog" style="max-width: 400px">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                <h4 class="modal-title" style="text-align: center">Confirmer la suppression</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p style="text-align: center; font-size:15px;">Voulez vous vraiment supprimer cette zone de circulation?</p>

                                            </div>
                                            <div class="modal-footer">
                                                <a href="{{path('supprimer_zonecirculation', {'id': z.id})}}" class="btn btn-danger">Supprimer</a>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
</div>
	
 {% endblock %}

